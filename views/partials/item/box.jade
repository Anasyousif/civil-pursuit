//- Navigator's item box
//- @mixin box
//- @param {Object} item

include image

mixin box(item, isSplit)
  // Box item
  .box(data-type="{{" + item + ".type}}" data-loaded="{{false}}")
    .row

      //- Image + user=author icon
      .col-xs-12.col-sm-4
        h1.is-author
          a(href='/edit/')
            i.fa.fa-user
        div
          +item-image(item)

      //- Subject + description
      .col-xs-12.col-sm-8
        //- Right buttons + stats
        .box-promoted.text-right.pull-right
          ul
            //- Promote button
            li(data-ng-show='is.in = ' + !!isSignedIn)
              a.btn.btn-sm(data-ng-href='/evaluate/{{' + item + '._id}}') Promote

            //- Promoted stat (times)
            li(data-ng-bind=item + '.promotions')

            //- Promoted stat (percent)
            li(data-ng-bind='(' + item + ' | getPromotedPercentageFilter) + "%"')

            //- Details button
            li
              a.btn.btn-sm(data-ng-href='/details/{{' + item + '._id}}') &nbsp;Details&nbsp;

        //- Subject     
        h4(data-ng-bind=item + '.subject')

        //- Description
        div.box-description(data-ng-bind=item + '.description' data-syn-more-less)

    block