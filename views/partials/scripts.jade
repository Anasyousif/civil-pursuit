//- SCRIPTS
    =======

    All the bottom script tags

// Scripts

//- # pass config public
block script-backend
  script.
    var synapp = !{JSON.stringify(synapp.public)} || {};
    synapp.env = "!{settings.env}";

//- # jQuery

block script-jquery
  - if ( settings.env === 'production')
    script(src=synapp.jquery.cdn)

  - else
    script(src='/bower_components/jquery/dist/jquery.min.js')

//- # Bootstrap

block script-bootstrap
  script(src='/dist/bootstrap.js')

//- # Shims

block script-shims
  script(src='/bower_components/ng-file-upload-shim/angular-file-upload-shim.js')

//- # Angular

block script-angular
  - if ( settings.env === 'production' )
    script(src=synapp.angular.cdn)

  - else
    script(src='/bower_components/angular/angular.min.js')

//- # Angular apps

block script-file-upload
  - if ( settings.env === 'production' )
    script(src='/bower_components/ng-file-upload/angular-file-upload.min.js')

  - else
    script(src='/bower_components/ng-file-upload/angular-file-upload.js')
  
block script-autogrow
  script(src='/js/angular/autogrow/index.js')

//- # Bootstrap sliders

block script-sliders
  - if ( settings.env === 'production' )
    script(src='/bower_components/seiyria-bootstrap-slider/dist/bootstrap-slider.min.js')

  - else
    script(src='/bower_components/seiyria-bootstrap-slider/js/bootstrap-slider.js')

block script-moment
  script(src='/bower_components/moment/min/moment.min.js')

block script-d3
  - if ( settings.env === 'production' )
    script(src='/bower_components/d3/d3.min.js')
  - else
    script(src='/bower_components/d3/d3.js')

block script-c3
  - if ( settings.env === 'production' )
    script(src='/bower_components/c3/c3.min.js')
  - else
    script(src='/bower_components/c3/c3.js')

//- # synapp

block script-app
  script(src='/dist/bundle.js')
