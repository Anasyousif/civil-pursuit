

form.row.synapp-sign.form-inline(role='method' novalidate ng-submit='sign.in()')

  //- Alert

  .alert.alert-warning.alert-dismissible(role='alert' ng-show='sign.error')
    p
      strong Warning! 
      span(ng-bind='sign.error')

  //- Email

  .col-xs-5
    input.form-control(type='email' ng-model='sign.email'  placeholder='Email' style='width: 100%')

  //- Passwords

  .col-xs-5
    //- First password
    input.form-control(type='password' placeholder='Password' ng-model='sign.password' style='width: 100%')
    p
    //- Confirm password
    input.form-control(type='password' placeholder='Confirm password' ng-model='sign.password_confirm' ng-show='sign._up' style='width: 100%')

  //- Submit

  .col-xs-2
    button.btn.btn-xs.btn-block Submit

hr