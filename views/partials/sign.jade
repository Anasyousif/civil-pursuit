//- EMAILS (SIGN BAR)
    =================

//- # Form

section(data-ng-controller='SignCtrl')

  form.form-inline.synapp-sign(
      role                  =     'form' 
      data-ng-submit        =     'signIn()'
      novalidate
    )

    //- Alert

    - if ( signUpDuplicateError )
      span(data-ng-init='alert = "This account is already in use."')

    include alert

    .row
      .col-xs-4
        input.form-control.input-lg(
          type              =   'email' 
          data-ng-model     =   'sign.email' 
          placeholder       =   'Email'
        )
      
      .col-xs-4
        input.form-control.input-lg(
          type              =   'password' 
          placeholder       =   'Password' 
          data-ng-model     =   'sign.password'
        )
      
      .col-xs-4
        .pull-right
          .btn-group
            button.btn.btn-default Login
            
            button.btn.btn-default.dropdown-toggle(type='button' data-toggle='dropdown')
              span.caret
                span.sr-only toggle

            ul.dropdown-menu(role='menu')
              li
                a(href='/auth/facebook') 
                  i.fa.fa-facebook
                  span  Login with Facebook

              li
                a(href='/auth/twitter') 
                  i.fa.fa-twitter
                  span  Login with Twitter

          button.btn.btn-default(type='button' data-toggle='modal' data-target='#join') Join

  hr

  //- # modal join

  #join.modal.fade(tabindex='-1' role='dialog' aria-labelledby='joinLabel' aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss="modal")
            span(aria-hidden='true') &times;
            span.sr-only Close

          h4#joinLabel.modal-title Join

        .modal-body
          include alert

          p
            button.btn.btn-link
              i.fa.fa-2x(
                data-ng-class='{ "fa-square-o": ! agreeToTerms, "fa-check-square-o": agreeToTerms }'
                data-ng-click=' agreeToTerms = ! agreeToTerms ')

            span(data-ng-click="agreeToTerms = ! agreeToTerms")
              span  I agree to 
              a(href='/terms-of-service') the terms of service
              span .

          p
            button.btn.btn-primary(data-ng-click='signUp("facebook")')
              i.fa.fa-facebook
            span  
            a(href='#' data-ng-click='signUp("facebook")') Join with Facebook

          p
            button.btn.btn-primary(onclick='/auth/twitter')
              i.fa.fa-twitter
            span  
            a(href='/auth/twitter') Join with Twitter

          h4.text-center Join with email

          form(role='form' data-ng-submit='signUp()' novalidate)
            .form-group
              input.form-control(type='email' placeholder='email' data-ng-model='signByMail.email')

            .form-group
              input.form-control(type='password' placeholder='password' data-ng-model='signByMail.password')

            .form-group
              input.form-control(type='password' placeholder='Confirm password' data-ng-model='signByMail.confirm')

            button.btn.btn-primary.btn-block Join with email
