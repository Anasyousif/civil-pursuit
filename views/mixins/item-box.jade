//- Navigator's item box
//- @mixin box
//- @param {Object} item

include item-image

mixin item-box(item, isSplit)
  // Box item
  .box(data-type="{{" + item + ".type}}" data-loaded="{{false}}")
    .row

      //- Image + user=author icon
      .col-xs-12.col-sm-4
        h1.is-author
          a(href='/edit/')
            i.fa.fa-user
        div
          +item-image(item)

      //- Subject + description
      .col-xs-12.col-sm-8
        //- Right buttons + stats
        .box-promoted.text-right.pull-right
          ul
            //- Promote button
            li(data-ng-show='is.in = ' + !!isSignedIn)
              a.btn.btn-sm(data-ng-click='toggle("evaluator", $event)') Promote

            //- Promoted stat (times)
            li(data-ng-bind=item + '.promotions')

            //- Promoted stat (percent)
            li(data-ng-bind='(' + item + ' | getPromotedPercentageFilter) + "%"')

            //- Details button
            li
              a.btn.btn-sm(data-ng-click='toggle("details", $event)') &nbsp;Details&nbsp;

        //- Subject     
        h4(data-ng-bind=item + '.subject')

        //- Description
        div.box-description.synapp-more-less.pre-text(data-ng-bind=item + '.description')

    block