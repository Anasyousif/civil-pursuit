//- MASTER
    ======

doctype html

//- # HTML head

block meta
  include ../partials/head

//- # Meta wrapper

// Page container

section.container(
  data-ng-app         =   'synapp' 
)

  //- # Top Bar
  
  section(role='header')
    include ../partials/top

  //- # Main wrapper

  // Main container
  
  section(role='main')

    //- # Emails

    - if ( !! isSignedIn === false )
      .synapp-sign

    //- # Page wrapper
    
    .row
      .col-xs-12
        #navigator.navigator.panel-group
          .synapp-navigator(data-type='Topic' data-autoload='{{true}}')
            .text-center Loading page...

  //- # Footer

  block footer
    include ../partials/footer

//- Scripts

block scripts
  include ../partials/scripts
