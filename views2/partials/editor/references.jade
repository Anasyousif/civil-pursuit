// References

//- Title

input.form-control.synapp-util-url-to-title(
  type              =   'text' 
  name              =   'title'
  placeholder       =   'http://'
  data-ng-model     =   'editor.title'
)

code.text-primary(ng-show='searchingTitle') Searching title for 
  span(ng-bind='editor.title | shorten:100' title='{{editor.title}}')

code.text-muted(ng-bind='editor.url | shorten:100' title='{{editor.url}}')

code.text-warning(ng-show='searchingTitleFailed') Could not resolve title

//- URL

input.entry-url(
  type              =   'hidden'
  name              =   'url'
  data-ng-model     =   'editor.url'
)
