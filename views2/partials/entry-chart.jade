// Votes

.row
  .col-xs-12
    h2 
      span(ng-bind='votes[criterias[0]._id].total || "No"')
      span  
      span vote
      span(ng-show='votes[criterias[0]._id].total > 1') s

    .row(
      data-ng-repeat        =   'criteria in criterias'
    )

      .col-xs-4

        //-
            CRITERIA NAME
        //-

        h4(
          ng-bind           =     'criteria.name'
          data-toggle       =     "tooltip" 
          data-placement    =     "top" 
          title             =     "{{criteria.description}}"
        )

      .col-xs-8

        //-
            CHART
        //-

        .synapp-util-charts( data-criteria='{{criteria._id}}' data-ng-show='votes[criteria._id].total')

          svg.chart(
            id                  =   'chart-{{criteria._id}}'
          )

          //-
              CHART SEPARATOR
          //-
          
          hr(
            data-ng-hide      =   'votes[criteria._id]'
          )

  hr
