//- MASTER
    ======

include mixins/item-image
include mixins/bootstrap

doctype html

//- # HTML head

block meta
  include layout/head

//- # Meta wrapper

// Page container

section.container-fluid(
  data-ng-app         =   'synapp' 
)

  //- # Top Bar
  
  section(role='header')
    include layout/top

  //- # Main wrapper

  // Main container
  
  section(role='main')

    //- # Emails

    - if ( ! isSignedIn )
      .sign

    //- # Page wrapper
    
    .row
      .col-xs-12

        // Intro

        #intro
          +bootstrap-panel
            +bootstrap-panel-heading
              h4.panel-title(ng-bind='intro.subject')
            +bootstrap-panel-body
              .box
                .item-media-wrapper
                  img.img-responsive.pull-left(data-ng-src='{{intro.image}}')

                div.item-text.padding
                  h4.item-title(ng-bind='intro.subject')
                
                  .box-description.description.pre-text(ng-bind='intro.description')
                  //
                    span.readmore
                      span [ 
                      a(href='#') more
                      span  ]

        block page

  //- # Footer

  block footer
    include layout/footer

//- Loading modal

include layout/loading-modal

//- Scripts

block scripts
  include layout/scripts
