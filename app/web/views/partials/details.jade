section

  //- Feedback pending

  section.feedback-pending
    h4 Feedback pending

    p While you are waiting for your feedback this is a great time to invite the people you know to join the effort to bring synergy to democracy.

    textarea

    a.btn(target='_blank') Send

  //- Promoted

  .row
    .col-sm-4.col-xs-12
      h4 Promoted
    .col-sm-8.col-xs-12.padding-top
      .progress
        .progress-bar.progress-bar-success

  //- Votes

  .row.details-votes
    .col-xs-12
      
      //- For each criteria

      .row

        .col-sm-4.col-xs-12

          //-
              CRITERIA NAME
          //-

          h4(
            data-ng-bind      =     'criteria.name'
            data-toggle       =     "tooltip" 
            data-placement    =     "top" 
            title             =     "{{criteria.description}}"
          )

        .col-sm-8.col-xs-12

          //-
              CHART
          //-

          div(data-charts='{{criteria._id}}')

            hr

    hr

  //- Has feedbacks

  .details-feedbacks
    h4 Feedback
    
    div
      hr
      div.pre-text

  //- Edit and go again
  .row.padding-top.is-in
    .col-xs-12.text-right
      hr
      button.btn.syn-btn Edit and go again
