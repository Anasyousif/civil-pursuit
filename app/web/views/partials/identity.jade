#identity.section.center
  .gutter
    img.img-responsive.user-image.tablet-40.radius(src=synapp.public['user image'])

    h2.profile-section-title Identity

    .tablet-push-40.gutter
      .pre-text=synapp.profile.identity.description

  .identity-collapse.is-container.row
    .is-section

      .gutter
        p.image-buttons.row
          button.block.upload-image Upload Image
          input.upload-identity-picture.hide(type='file')

        .names.input-group-tablet
          input.watch-100.tablet-40(type='text' placeholder='First name' name='first-name')
          
          input.watch-100.tablet-20(type='text' placeholder='Middle name' name='middle-name')
          
          input.watch-100.tablet-40(type='text' placeholder='Last name' name='last-name')

