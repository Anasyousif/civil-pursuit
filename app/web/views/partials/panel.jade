.panel.panel-default

  .panel-heading
    block toggle-creator
      h5.fa.fa-plus.cursor-pointer.toggle-creator

    h5.panel-title
      block title
        span.iddle
          i.fa.fa-circle-o-notch.fa-spin

  .panel-body

    block panel-body

      include creator
      
      // Items
      
      .items
        block items

      block loading-items
        .loading-items
          i.fa.fa-circle-o-notch.fa-spin
          span  Loading items...

      .padding.hide.pre

        // Load more

        .load-more.hide
          a(href='') View more

        // Create new

        .create-new
          a(href='') Click the + to be the first to add something here
