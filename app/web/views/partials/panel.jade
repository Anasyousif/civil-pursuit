include ../mixins/bootstrap

+bootstrap-panel

  // PANEL HEADING

  +bootstrap-panel-heading

    // TOGGLE CREATOR

    i.pull-right.fa.fa-plus.cursor-pointer.toggle-creator

    // TYPE

    h4.panel-title Loading Panel Title...

  // PANEL BODY

  +bootstrap-panel-body

    .creator.is-container
      .is-section
        .item.box
          .item-media-wrapper
            article.item-media
          
          .pull-right.box-buttons
            button.btn.toggle-promote Promote
            div.promoted 0
            div.promoted-percent 0
            button.btn.toggle-details Details

          .item-text
            input(type='text' placeholder='Item subject')
            
            textarea(placeholder='Item description')
            
            .item-references
              h4
                a(href='#' target='_blank') Loading Item Reference


    .items

    .load-more
      a(href='') View more
