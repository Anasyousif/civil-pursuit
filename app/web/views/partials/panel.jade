include ../mixins/bootstrap

+bootstrap-panel

  // PANEL HEADING

  +bootstrap-panel-heading

    // TOGGLE CREATOR

    i.pull-right.fa.fa-plus.cursor-pointer.toggle-creator

    // TYPE

    h4.panel-title Loading Panel Title...

  // PANEL BODY

  +bootstrap-panel-body

    .creator.is-container
      .is-section
        .item.box
          .item-media-wrapper
            article.item-media
          
          .pull-right.box-buttons
            button.btn Promote
            .text-muted New
            div.promoted-percent 0
            button.btn(disabled) Details

          .item-text
            .input-subject
              input.form-control.input-lg(type='text' placeholder='Item subject')
            
              textarea.form-control.input-lg(placeholder='Item description')
            
              input.form-control.input-lg(placeholder='Item reference')


    .items

    .load-more
      a(href='') View more
