  .is-section
    .item.box
      .item-media-wrapper
        article.item-media.padding
          .drop-box
            .modern
              h4 Drop image here
              p or
            input(type='file' value='Upload image')
      
      .pull-right.box-buttons
        button.btn.button-create Promote
        .text-muted New
        .text-muted
        button.btn(disabled) Details

      .item-text
        .input-subject
          input.form-control.input-lg(type='text' placeholder='Item subject' name='subject' required data-title="Missing field" data-placement="auto top" data-content="Please enter a subject")
        
          textarea.form-control.input-lg(placeholder='Describe the subject in a concise and complete fashion that is measurable and unbiased' name='description' required data-title='Missing field' data-placement="auto top" data-content="Please enter a description")
        
          input.form-control.input-lg.reference(placeholder='http://' name="reference")

