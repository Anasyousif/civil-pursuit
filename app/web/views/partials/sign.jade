//- EMAILS (SIGN BAR)
    =================

//- # Form

form.form-inline.text-center#signer(role='form' novalidate)
  input.form-control.input-lg(type='email' placeholder='Email' name='email')
  input.form-control.input-lg(type='password' placeholder='Password' name='password')
  .btn-group
    button.btn.btn-default.btn-lg Login

    button.btn.btn-default.dropdown-toggle.btn-lg(type='button' data-toggle='dropdown')
      span.caret
        span.sr-only toggle

    ul.dropdown-menu(role='menu')
      li
        a(href='/auth/facebook') 
          i.fa.fa-facebook
          span  Login with Facebook

      li
        a(href='/auth/twitter') 
          i.fa.fa-twitter
          span  Login with Twitter

      li
        a(href='/auth/twitter') 
          i.fa.fa-key
          span  Forgot password?

  button.btn.btn-default.btn-lg(type='button' data-toggle='modal' data-target='#join') Join

hr

//- # modal join

#join.modal.fade(tabindex='-1' role='dialog' aria-labelledby='joinLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button' data-dismiss="modal")
          span(aria-hidden='true') &times;
          span.sr-only Close

        h4#joinLabel.modal-title Join

      .modal-body
        include ../layout/alert

        p
          button.btn.btn-link
            i.fa.fa-2x(
              data-ng-class='{ "fa-square-o": ! agreeToTerms, "fa-check-square-o": agreeToTerms }'
              data-ng-click=' agreeToTerms = ! agreeToTerms ')

          span(data-ng-click="agreeToTerms = ! agreeToTerms")
            span  I agree to 
            a(href='/terms-of-service') the terms of service
            span .

        p
          button.btn.btn-primary
            i.fa.fa-facebook
          span  
          a(href=synapp.public.routes["sign in with Facebook"]) Join with Facebook

        p
          button.btn.btn-primary
            i.fa.fa-twitter
          span  
          a(href=synapp.public.routes["sign in with Twitter"]) Join with Twitter

        h4.text-center Join with email

        form(role='form' data-ng-submit='signUp()' novalidate)
          .form-group
            input.form-control(type='email' placeholder='email' data-ng-model='signByMail.email')

          .form-group
            input.form-control(type='password' placeholder='password' data-ng-model='signByMail.password')

          .form-group
            input.form-control(type='password' placeholder='Confirm password' data-ng-model='signByMail.confirm')

          button.btn.btn-primary.btn-block Join with email
