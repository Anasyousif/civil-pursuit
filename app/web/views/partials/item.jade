.item.box
  
  .item-media-wrapper
    article.item-media
  
  .pull-right.box-buttons
    button.btn.toggle-promote.is-in Promote
    div.promoted 0
    div.promoted-percent 0
    button.btn.toggle-details Details

  .item-text
    h4.item-title
      a(href='#') Loading Item Subject...
    .box-description.description.pre-text.padding-right.padding-left Loading Item Description...
    .item-references
      h4
        a(href='#' target='_blank') Loading Item Reference

  .collapsers

    .evaluator.is-container
      .is-section
        include evaluator

    .details.is-container
      .is-section
        include details

    .children.is-container
      .is-section

    .row.toggle-arrow
      .col-xs-12.text-center
        i.fa.cursor-pointer.fa-arrow-down
