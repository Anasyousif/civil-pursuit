#forgot-password.modal.fade(tabindex='-2' role='dialog' aria-labelledby='forgotLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button' data-dismiss='modal')
          span(aria-hidden='true') &times;
          span.sr-only Close

        h4#forgotLabel.modal-title.text-center Forgot password

      .modal-body
        include ../../layout/alert

        form(role='form' novalidate name='forgot-password')
          .forgot-password-email-not-found.bg-danger.text-danger.padding.text-center.round.collapse
            i.fa.fa-warning
            b  This email was not found.

          .forgot-password-ok.bg-success.text-success.padding.text-center.round.collapse
            i.fa.fa-warning
            b  An reset key was sent to your email.

          label
            big Enter your email address

          .form-group
            input.form-control.input-lg(type='email' placeholder='Enter email address' name="email")

          button.btn.btn-block.btn-lg.btn-primary Send me password reactivation key
