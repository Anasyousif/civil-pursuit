#join.hide
  .join-modal
    h4 Join with

    .button-group-2
      a.button(href='/sign/facebook')
        i.fa.fa-facebook
        span  Facebook

      a.button(href='/sign/twitter')
        i.fa.fa-twitter
        span  Twitter

    h4 Join with email

    form(role='form' novalidate name='join' method='POST')
      .form-group.tablet-50
        label Email
        input(type='email' placeholder='Email' name='email' required)

    .form-group.tablet-50
      label Password
      input.block(type='password' placeholder='Password' name='password')

    .form-group.tablet-50
      label Confirm
      input.form-control.input-lg(type='password' placeholder='Confirm password' name='confirm')

    p.tablet-50
      button.primary.login-submit.block
        i.fa.fa-sign-in
        span  Join

    .i-agree
      button.shy
        i.fa.fa-2x.fa-square-o.agreed

      span
        span  I agree to 
        a(href='/page/terms-of-service') the terms of service
        span .