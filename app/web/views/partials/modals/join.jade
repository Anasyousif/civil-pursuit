#join.modal.fade(tabindex='-1' role='dialog' aria-labelledby='joinLabel' aria-hidden='true')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button' data-dismiss="modal")
          span(aria-hidden='true') &times;
          span.sr-only Close

        h4#joinLabel.modal-title.text-center Join with

      .modal-body
        include ../../layout/alert

        .btn-group.btn-group-justified
          a.btn.btn-primary.btn-lg(href=synapp.public.routes["sign in with Facebook"])
            i.fa.fa-facebook
            span  Facebook

          a.btn.btn-info.btn-lg(href=synapp.public.routes["sign in with Twitter"])
            i.fa.fa-twitter
            span  Twitter

      .modal-header
        h4#joinLabel.modal-title.text-center Or join with email

      .modal-body

        form(role='form' novalidate)
          .form-group
            input.form-control.input-lg(type='email' placeholder='email' name='email')

          .form-group
            input.form-control.input-lg(type='password' placeholder='password' name='password')

          .form-group
            input.form-control.input-lg(type='password' placeholder='Confirm password' name='confirm')

          button.btn.btn-primary.btn-block.btn-lg Join with email

        .i-agree.text-center.padding
          button.btn.btn-link
            i.fa.fa-2x.fa-square-o.agreed

          span
            span  I agree to 
            a(href='/page/terms-of-service') the terms of service
            span .