#forgot-password.modal.fade(tabindex='-2' role='dialog' aria-labelledby='forgotLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button' data-dismiss='modal')
          span(aria-hidden='true') &times;
          span.sr-only Close

        h4#forgotLabel.modal-title Change password

      .modal-body
        include ../layout/alert

        form(role='form' novalidate)
          p Enter your email address

          .form-group
            input.form-control(type='email' placeholder='Enter email address' name="email")

          button.btn.btn-block Send me password reactivation key