extends ../layout

block title
  span Reset Password

block toggle-creator
  span

block loading-items
  span

block items
  form#reset-password.padding(method='POST' name="reset-password")

    .reset-password-loading.collapse.bg-info.text-info.padding.text-center
      i.fa.fa-circle-o-notch.fa-spin
      b  Resetting password

    .reset-password-not-found.collapse.bg-danger.text-danger.padding.text-center
      i.fa.fa-times
      b  Reset key not found

    .reset-password-ok.collapse.bg-success.text-success.padding.text-center
      i.fa.fa-check
      b  Your password has been reset

    .form-section.collapse.in
      .row
        .col-xs-12
          .form-group
            label Reset key:
            input.input-lg.form-control(type='text' name="key" autofocus)

      .row
        .col-xs-12
          .form-group
            label New password:
            input.input-lg.form-control(type='password' name="password")

      .row
        .col-xs-12
          .form-group
            label Confirm new password:
            input.input-lg.form-control(type='password' name="confirm")

      button.btn.btn-lg.btn-block.btn-primary Reset password

block page
  #reset-password-wrapper
    include ../partials/panel
