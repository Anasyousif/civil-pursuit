// javascript

//- # pass config public
block script-backend
  script.
    var synapp = !{JSON.stringify(synapp.public)};
    synapp.env = "!{settings.env}";
    synapp.user = "!{(req.user && req.user.id)}";
    synapp.protocol = "!{protocol}";
    console.log('user', synapp)

